<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.up.cs371.noones18.carstereo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:background="#FF0000"
            tools:layout_width="match_parent">

            <LinearLayout
                android:layout_width="859dp"
                android:layout_height="match_parent"
                android:layout_weight="0.86"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Station1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1" />

                    <Button
                        android:id="@+id/Station2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2" />

                    <Button
                        android:id="@+id/Station3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3" />

                    <Button
                        android:id="@+id/Station4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4" />

                    <Button
                        android:id="@+id/Station5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5" />

                    <Button
                        android:id="@+id/Station6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:orientation="vertical"
                tools:layout_height="316dp">

                <Button
                    android:id="@+id/powerbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Power" />

                <Button
                    android:id="@+id/AMbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AM" />

                <Button
                    android:id="@+id/FMbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FM" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.86"
            android:background="@android:color/holo_orange_dark"
            android:orientation="horizontal"
            tools:background="@android:color/holo_orange_dark"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="335dp"></LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
